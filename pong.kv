#:kivy 1.0.9

<PongBall>:
    size: 40, 40
    canvas:
        Color: 
            rgba: 1, 1, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size
        

<PongPaddle>:
    size: 25, 220
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
        Color: 
            rgba: 1, 0, 0, 1

<PongPaddle>:
    size: 25, 220
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
        Color: 
            rgba: 1, 0, 0, 1

<PongPaddleSide>:
    size: 220, 25
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
        Color: 
            rgba: 0, 0, 1, 1

<PongPaddleSide>:
    size: 220, 25
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
        Color: 
            rgba: 0, 0, 1, 1


<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    player3: player_up
    player4: player_down
    
    Label:
        font_size: 50  
        center_x: root.width / 6
        top: root.top - 380
        text: str(root.player1.score)
        color: 1,1,1,0.9
        
    Label:
        font_size: 50  
        center_x: root.width * 5 / 6
        top: root.top - 380
        text: str(root.player2.score)
        color: 1,1,1,0.9

    Label:
        font_size: 50  
        center_x: root.width * 2 / 4
        top: root.top - 660
        text: str(root.player3.score)
        color: 1,1,1,0.9

    Label:
        font_size: 50  
        center_x: root.width * 2 / 4
        top: root.top - 110
        text: str(root.player4.score)
        color: 1,1,1,0.9
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y

    PongPaddleSide:
        id: player_up
        y: root.y
        center_x: root.center_x
    
    PongPaddleSide:
        id: player_down
        top: root.top
        center_x: root.center_x
        